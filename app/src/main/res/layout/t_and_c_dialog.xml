<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">


    <LinearLayout
        android:id="@+id/id_disclaimer_title_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10_dp"
        android:layout_marginRight="@dimen/margin_10_dp"
        android:layout_marginTop="@dimen/margin_10_dp"
        android:background="@drawable/blue_background_top_curved">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="20dp"
            android:text="Term and Conditions"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_20_sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/id_disclaimer_close_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@mipmap/close" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/id_disclaimer_bottom_ll"
        android:layout_below="@+id/id_disclaimer_title_ll"
        android:layout_marginLeft="@dimen/margin_10_dp"
        android:layout_marginRight="@dimen/margin_10_dp"
        android:background="@drawable/white_background_bottom_curved"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_disclaimer_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_background_bottom_curved"
                android:padding="10dp"
                android:text="conditions"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_13_sp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/id_disclaimer_bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/white_background_bottom_curved">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textsize_20_sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>