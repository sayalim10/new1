<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/id_login_screen_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">


        <com.devn.mess.utils.MyTextInputLayout
            android:id="@+id/id_forgot_password_phone_no_wrapper"
            style="@style/style_textinputlayout"
            app:errorTextAppearance="@style/error_appearance"
            app:passwordToggleEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/id_forgot_password_phone_no_et"
                style="@style/style_et_medium"
                android:hint="10 digits Phone No"
                android:inputType="phone"
                android:maxLength="10"></android.support.design.widget.TextInputEditText>
        </com.devn.mess.utils.MyTextInputLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_forgot_password_sign_in_tv"
                style="@style/style_tv_small"
                android:layout_margin="3dp"
                android:autoLink="all"
                android:gravity="center_horizontal"
                android:linksClickable="false"
                android:selectAllOnFocus="false"
                android:text="@string/sign_in" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="@color/md_black_1000"></View>

            <TextView
                android:id="@+id/id_forgot_password_sign_up_tv"
                style="@style/style_tv_small"
                android:layout_margin="3dp"
                android:autoLink="all"
                android:gravity="center_horizontal"
                android:linksClickable="false"
                android:selectAllOnFocus="false"
                android:text="@string/sign_up" />
        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/id_forgot_password_submit_btn"
            style="@style/button_medium"
            android:text="Submit" />

    </LinearLayout>


</RelativeLayout>
